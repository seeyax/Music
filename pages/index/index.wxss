.banners{
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.banners image {
  width: 100%;
  height: 100%;
}

.navContainer {
  display: flex;
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
 width: 100rpx;
 height: 100rpx;
 border-radius: 50%;
 text-align: center;
 line-height: 100rpx;
 background: rgb(240, 19, 19);
 font-size: 50rpx;
 color: #fff;
 margin: 20rpx 0;
}


.navItem text {
  font-size: 26rpx;
}
/* 推荐歌曲 */

.recommendContainer .head .title {
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}
.recommendContainer .head .more {
  float: right;
  border: 1rpx solid #333;
  border-radius: 30rpx;
  font-size: 22rpx;
  padding: 10rpx;
}

/* 推荐内容区 */
.recommendScroll {
  display: flex;
  height: 300rpx;
  padding: 20rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem text {
  font-size: 26rpx;
  /* 单行文本溢出，省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden !important;
  text-overflow: ellipsis; */
  /* 多行文本溢出，省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对齐模式*/
  -webkit-line-clamp: 2; /*设置行数*/
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

/* 排行榜 */
.topListSwiper {
  height: 400rpx;
}
.swiperItem {
  padding: 20rpx;
  width: 96%;
  background-color: #f8f8f8;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.swiperItem image {
  width: 100rpx;
  height: 100rpx;
}
.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
  border: 6rpx;
}
.swiperItem .count {
  width: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  text-align: center;
}
.swiperItem .musicItem {
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}